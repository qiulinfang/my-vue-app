        "paths": {
            "~assets/*": [
                "apps/src/assets/*"
            ],
            "~components/*": [
                "apps/src/common/baseComponents/*"
            ],
            "~locales/*": [
                "apps/src/locales/*"
            ],
            "~plugins/*": [
                "apps/src/plugins/*"
            ],
            "~router/*": [
                "apps/src/router/*"
